<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rv_row_bg"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail_img"
                android:contentDescription="Image Loading..."
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:padding="14dp">

            <TextView
                android:id="@+id/name_txt"
                android:text="Name: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name_desc"
                android:text="Thor"
                android:layout_toRightOf="@id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/real_name_txt"
                android:text="Real Name: "
                android:layout_below="@id/name_txt"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/real_name_desc"
                android:text="Thor Odinson"
                android:layout_toRightOf="@id/real_name_txt"
                android:layout_marginTop="7dp"
                android:layout_below="@id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bio_txt"
                android:text="Bio: "
                android:layout_below="@id/real_name_txt"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bio_desc"
                android:text="@string/default_bio"
                android:layout_below="@id/bio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/team_txt"
                android:text="Team: "
                android:layout_toLeftOf="@id/team_desc"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/team_desc"
                android:text="Avengers"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/appearance_txt"
                android:text="Appearance: "
                android:layout_toLeftOf="@id/appearance_desc"
                android:layout_below="@id/team_desc"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/appearance_desc"
                android:text="1962"
                android:layout_alignParentRight="true"
                android:layout_below="@id/team_desc"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>